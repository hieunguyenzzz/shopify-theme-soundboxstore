{
  "name": "For Edu top",
  "settings":[ {
          "type": "image_picker",
          "id": "avatar",
          "label": "Avatar"
  },{
          "type": "text",
          "id": "sub-heading-top",
          "label": "Heading",
    "default":"Embracing Sustainability"
        },{
          "type": "text",
          "id": "heading",
