<div class="page-width page-width--cart page-content">

  {%- render 'breadcrumbs' -%}

   
  <header class="section-header text-center{% if cart.item_count == 0 %} section-header--404{% endif %}">
    
   
    <h1 class="section-header__title">{{ 'cart.general.title' | t }}</h1>
    
    
    <div class="rte text-spacing">
      {%- if cart.item_count == 0 -%}
        <p>{{ 'cart.general.empty' | t }}</p>
        <hr class="hr--clear hr--small">
        <p>
          <a href="{{ routes.root_url }}" class="btn">{{ 'cart.general.continue_shopping' | t }}</a>
        </p>
      {%- endif -%}
    </div>
  </header>

  {%- if cart.item_count > 0 -%}
    <form action="{{ routes.cart_url }}" method="post" novalidate data-location="page" id="CartPageForm">
      <div class="cart__page">
        <div class="cart__page-col">
          
          <h1 class="cart-col-title">Your Items</h1>
          <div data-products class="cart-items-list">
            {% for item in cart.items %}
              {%- render 'cart-item', product: item -%}
            {% endfor %}
          </div>

          {%- render 'cart-recommendations', location: 'page' -%}
        </div>
        <div class="cart__page-col">
          
          <h1 class="cart-col-title">Order Summary</h1>
          {% if settings.cart_notes_enable %}
            <div class="cart__item-row">
              <label for="CartNote" class="add-note">
                {{ 'cart.general.note' | t }}
                <span class="note-icon note-icon--open" aria-hidden="true">
                  <svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-pencil" viewBox="0 0 64 64"><defs><style>.cls-1,.cls-2{fill:none;stroke:#000;stroke-width:2px}.cls-1{stroke-miterlimit:10}</style></defs><path class="cls-1" d="M52 33.96V58H8V14h23.7"/><path class="cls-1" d="M18 47l13-5 24-24-8-8-24 24-5 13zM23 34l8 8"/><path id="svg_2" data-name="svg 2" class="cls-2" d="M47 10l1-1a5.44 5.44 0 0 1 7.82.18A5.52 5.52 0 0 1 56 17l-1 1"/></svg>
                </span>
                <span class="note-icon note-icon--close">
                  <svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-close" viewBox="0 0 64 64"><defs><style>.cls-1{fill:none;stroke:#000;stroke-miterlimit:10;stroke-width:2px}</style></defs><path class="cls-1" d="M19 17.61l27.12 27.13m0-27.13L19 44.74"/></svg>
                  <span class="icon__fallback-text">{{ 'general.accessibility.close' | t }}</span>
                </span>
              </label>
              <textarea name="note" class="input-full cart__note hide" id="CartNote">{{ cart.note }}</textarea>
            </div>
          {% endif %}

          <div class="cart__item-sub cart__item-row cart__item--subtotal">
            <div class="subtotal-text">
              <span>{{ 'cart.general.subtotal' | t }}</span>
              <span data-subtotal-new>{{ cart.original_total_price | money}}</span>
            </div>
           
            <div class="tax-text">
              <span>Tax</span>
              <span>Calculated at checkout</span>
            </div>
            
            <div class="shipping-text">
              <span>Shipping</span>
              <span>Calculated at checkout</span>
            </div>
            
            {% comment %}
            <div data-subtotal class="data-subtotal-block">
              {%- render 'price' with cart.total_price -%}
            </div>
            {% endcomment %}
            
            <div class="data-subtotal-block data-total">
              <span>Total</span>
              <span data-subtotal>{{ cart.total_price | money }}</span>
            </div>
            
          </div>

          <div data-discounts>
            {% if cart.cart_level_discount_applications != blank %}
              <div class="cart__discounts text-right">
                <div>
                  {% for cart_discount in cart.cart_level_discount_applications %}
                    {%- assign savings = cart_discount.total_allocated_amount | money -%}
                    <div class="cart__discount">
                      {{ 'cart.general.savings_html' | t: saved_amount: savings }}
                      ({{ cart_discount.title }})
                    </div>
                  {% endfor %}
                </div>
              </div>
            {% endif %}
          </div>
          
          {%- for block in section.blocks -%}
          {%- case block.type -%}
              {%- when '@app' -%}
                {% render block %}
              {%- when 'klarna_block' -%}
              	{% if block.settings.title != blank and block.settings.learn_more_link != blank %}
          		<div class="klara-block">
                    <p>{{block.settings.title}}<a class="learn-more-btn" href="{{block.settings.learn_more_link}}">Learn more</a></p>
                </div>
          		{% endif %}
          	  {%- when 'ship_block' -%}
                {% if block.settings.ship_text != blank %}
                  <div class="shipping-date-details">
                    <div class="wrap">
                      <p>{{block.settings.ship_text}}</p>
                    </div>
                  </div>
                {% endif %}
          {%- endcase -%}
          {%- endfor -%}
          

          

          <div class="cart__item-row cart__checkout-wrapper">
            <button type="submit" name="checkout" data-terms-required="{{ settings.cart_terms_conditions_enable }}" class="btn cart__checkout">
              {{ 'cart.general.checkout' | t }}
            </button>

            {% if additional_checkout_buttons and settings.cart_additional_buttons %}
              <div class="additional-checkout-buttons">{{ content_for_additional_checkout_buttons }}</div>
            {% endif %}

            
            {% comment %}
            <a href="{{ routes.all_products_collection_url }}" class="btn btn--secondary cart__continue">
              {{ 'cart.general.continue_shopping' | t }}
            </a>
            {% endcomment %}
            
          </div>
          
          {% if settings.cart_terms_conditions_enable %}
            <div class="cart__item-row cart__terms">
              <input type="checkbox" id="CartTerms" class="cart__terms-checkbox">
              <label for="CartTerms" class="text-label">
                <small>
                  {% if settings.cart_terms_conditions_link != blank %}
                    {{ 'cart.general.terms_html' | t: url: settings.cart_terms_conditions_link }}
                  {% else %}
                    {{ 'cart.general.terms' | t }}
                  {% endif %}
                </small>
              </label>
            </div>
          {% endif %}
          
			{% comment %}
          <div class="cart__item-row text-center">
            <small>{{ 'cart.general.shipping_at_checkout' | t }}</small>
          </div>
          {% endcomment %}
          
          
          <div class="cart-payment-block">
            <div class="payment-wrap">
              <img src="https://cdn.shopify.com/s/files/1/2589/1828/t/86/assets/payment-logos.png?v=106543724149054969671653418035" alt="">
            </div>
         	</div>
          
          {% assign accordion_blocks = section.blocks | where: 'type', 'accordion_info' %}
          {% if accordion_blocks.size  > 0 %}
            <div class="additional-info-block">
              <div class="accordion-block">
                {% for block in accordion_blocks %}
                    <div class="set">
                      
                      {% if block.settings.title != blank %}
                      <div class="title-block active">
                        <span class="icon-small">
                        <svg viewBox="0 0 25 17" xmlns="http://www.w3.org/2000/svg" role="img" aria-labelledby="SVGInline-34-title"><title id="SVGInline-34-title">Checkbox</title><path class="check_path" d="M24.593 2.226L9.294 16.65c-.234.226-.54.35-.867.35-.337 0-.663-.133-.898-.38L.374 9.407c-.5-.494-.5-1.32 0-1.813a1.255 1.255 0 0 1 1.797 0l6.286 6.325L22.86.35c.244-.237.571-.351.908-.351.347.01.663.155.888.413a1.284 1.284 0 0 1-.062 1.813" fill-rule="evenodd"></path></svg>
                        </span>
                        <h3>{{ block.settings.title }}</h3>
                      </div>
                      {% endif %}
                      
                      
                      {% if block.settings.content != blank %}
                      <div class="content-block">
                       <p>{{ block.settings.content }}</p>
                      </div>
                      {% endif %}
                      
                    </div>
                {% endfor %}
              </div>
          	</div>
          {% endif %}
        </div>
      </div>
    </form>
  {%- endif -%}
</div>

{% schema %}
  {
    "name": "Cart Page",
    "settings": [],
    "blocks": [
      {
        "type": "@app"
      },
      {
        "type": "accordion_info",
        "name": "accordion",
        "limit": 3,
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "title"
          },{
            "type": "textarea",
            "id": "content",
            "label": "Content"
          }
        ]
      },
      {
        "type": "klarna_block",
        "name": "klarna Block",
        "limit": 1,
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "title"
          },{
            "type": "url",
            "id": "learn_more_link",
            "label": "learn More Link"
          }
        ]
      },
      {
        "type": "ship_block",
        "name": "Ship Block",
        "limit": 1,
        "settings": [
          {
            "type": "text",
            "id": "ship_text",
            "label": "Ship Text"
          }
        ]
      }
    ]
  }
{% endschema %}
