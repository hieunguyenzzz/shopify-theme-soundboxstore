<style>
    .image-loop-description {
      text-align: center;
             padding: 0 var(--pageWidthPadding);
      margin-bottom: 60px;
    }
    .image-loop-description h3 {
      font-weight: 500;
    }
    .image-loop .image-text-row:nth-child(2n + 1) .flexbox {
      flex-direction: row-reverse;
    }
    .image-loop .image-text-row:nth-child(2n) .flexbox {
      flex-direction: row;
    }
    .image-loop .col.left-col .col-wrap:after {
      padding-bottom: 100%;
    }
    .image-loop .image-text-row {
      background: transparent;
    }
    .image-loop .image-text-row img {
      object-position: left;
    }
    .image-loop .image-text-row:nth-child(2n) img {
      object-position: right;
    }
    .section-wrap .image-text-row{
      margin-bottom:60px
    }
    .image-loop .col.right-col .col-wrap{
      padding: 0 var(--pageWidthPadding);
      max-width:500px;
      margin:auto;

    }
    .image-loop .image-text-row:nth-child(2n) .flexbox .col.right-col .col-wrap{
         padding:  1em var(--pageWidthPadding)
    }
     .image-loop .col.right-col .col-wrap p{
        font-size:80%;
     }
      .image-loop .col.right-col .col-wrap h4{
        font-size:110%;
        font-weight:500;
        display:block;
        position:relative;
        padding: 0.6em 0
     }
    .image-loop .col.right-col .col-wrap h4:before{
      content:'';
      position:absolute;
      width:60px;
      bottom:0;
      left:0;
      border-bottom:2px solid
    }

    @media only screen and (max-width: 767px){
      .image-loop .image-text-row:first-child,.image-loop .image-text-row{
        padding:0
      }
        .image-loop .image-text-row:nth-child(2n) .flexbox .col.right-col .col-wrap{
        padding:  0em var(--pageWidthPadding)
    }
        .section-wrap .image-text-row{
      margin-bottom:1em
    }
        .image-loop-description {
      text-align: center;
             padding: 0 var(--pageWidthPadding);
      margin-bottom: 1em;
    }
       .image-loop{
      padding: 1em 0
    }
    }
    .image-loop .section-header {
      display: flex;
      flex-wrap: wrap;
      margin-bottom: 40px
  }

  .image-loop .section-header .left-col {
      width: 100%;
      max-width: 40%
  }

  .image-loop .section-header .left-col h2,.new-coll-header .image-color-switch ul li {
      margin: 0
  }

  .image-loop .section-header .right-col {
      width: 100%;
      max-width: 60%
  }

  .image-loop .section-header .right-col p {
      margin: 0;
      font-weight: 400;
      font-size: 24px;
      line-height: 1.667;
      letter-spacing: 1px;
      color: #454545;
      max-width: 843px
  }
</style>
<section class="image-loop page-width">
  <div class="section-header">
    <div class="left-col">
      <h2 class="title-font">{{ section.settings.title }}</h2>
    </div>
    <div class="right-col image-loop-description">
      {{ section.settings.description }}
    </div>
  </div>

  <div class="section-wrap">
    {%- for block in section.blocks -%}
      {% if block.settings.image != blank %}
        <div class="image-text-row">
          <div class="flexbox">
            <div class="col left-col">
              <div class="col-wrap">
                {{ block.settings.image | image_url: width: 900 | image_tag: widths: '400, 600, 800', loading: 'lazy' }}
              </div>
            </div>
            <div class="col right-col">
              <div class="col-wrap">
                {% if block.settings.title != blank %}
                  <h2 class="title-font">{{ block.settings.title }}</h2>
                {% endif %}
                {% if block.settings.description != blank %}{{ block.settings.description }}{% endif %}
              </div>
            </div>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</section>
{% if section.settings.bg_color != blank %}
  <style>
    .image-loop .image-text-row{background-color:{{ section.settings.bg_color }}}
  </style>
{% endif %}
{% schema %}
 {
   "name": "Image loop Section new",
   "settings": [
     {
           "type": "text",
           "id": "title",
           "label": "Title"
         },
         {
           "type": "richtext",
           "id": "description",
           "label": "Description"
         },
       {
         "type": "color",
         "id": "bg_color",
         "label": "Background Color"
       }
],
   "blocks": [
     {
       "type": "image_section",
       "name": "Image section new",
       "settings": [
	  {
           "type": "image_picker",
           "id": "image",
           "label": "Image"
         },
         {
           "type": "text",
           "id": "title",
           "label": "Title"
         },
         {
           "type": "richtext",
           "id": "description",
           "label": "Description"
         }
	]
     }
   ],
   "presets": [
     {
       "name": "Image loop Section",
       "blocks": []
     }
   ]
 }
{% endschema %}
