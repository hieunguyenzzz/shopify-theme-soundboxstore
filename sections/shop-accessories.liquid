<div class="page-width">
  {%- if section.settings.title != blank -%}
    <div class="section-title">
      <h2 class="title-font">{{ section.settings.title }}</h2>
    </div>
  {%- endif -%}

  <div class="new-grid" data-view="6-2">
    {%- for product in section.settings.collection.products -%}
      <div class="grid-item">
        <a href="{{ product.url }}" class="collection-item">
          {% assign image = product.featured_image %}
          <div class="collection-image-wrap collection-image--{{ settings.collection_grid_shape }}">
            {%- unless image -%}
              {%- capture placeholder -%}collection-{% cycle 1, 2, 3, 4, 5, 6 %}{%- endcapture -%}
              <div class="collection-image collection-image--placeholder">
                {{ placeholder | placeholder_svg_tag: 'placeholder-svg' }}
              </div>
            {%- else -%}
              <div class="collection-image image-wrap">
                {{ image | image_url: width: 600 | image_tag }}
              </div>
            {%- endunless -%}
          </div>
          <span class="collection-item__title">{{ product.title }}</span>
        </a>
      </div>
    {%- endfor -%}
    {%- for block in section.blocks -%}
      {% assign product = block.settings.product %}
      <div class="grid-item">
        <a href="{{ product.url }}" class="collection-item">
          {% assign image = product.featured_image %}
          <div class="collection-image-wrap collection-image--{{ settings.collection_grid_shape }}">
            {%- unless image -%}
              {%- capture placeholder -%}collection-{% cycle 1, 2, 3, 4, 5, 6 %}{%- endcapture -%}
              <div class="collection-image collection-image--placeholder">
                {{ placeholder | placeholder_svg_tag: 'placeholder-svg' }}
              </div>
            {%- else -%}
              <div class="collection-image image-wrap">
                {{ image | image_url: width: 600 | image_tag }}
              </div>
            {%- endunless -%}
          </div>
          <span class="collection-item__title">{{ product.title }}</span>
        </a>
      </div>
    {%- endfor -%}
  </div>
</div>
<script>
  $(document).ready(function () {
  $("#shopify-section-{{section.id}}").slick({
    slidesToShow: 2,
    slidesToScroll: 2,
    mobileFirst: true,
    arrows: false,
    autoplay: true,
    dots: false,
    responsive: [

      {
        breakpoint: 1081,
        settings: {
          slidesToShow: 4,
          slidesToScroll: 4,
          adaptiveHeight: true,
        },
      },
      {
        breakpoint: 861,
        settings: {
          slidesToShow: 3,
          slidesToScroll: 3,
          adaptiveHeight: true,
        },
      },
    ],
  });
  }
</script>
{% schema %}
{
  "name": "Shop Accessories",
  "class": "index-section",
  "max_blocks": 18,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Shop Accessories"
    },
      {
      "type": "collection",
      "id": "collection",
      "label": "collection"
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "settings": [
        {
          "id": "product",
          "type": "product",
          "label": "product"
        }
      ]
    }
  ],
  "presets": [{
    "name": "Shop Accessories",
    "settings": {
        "title": "Shop Accessories",
        "collection": "accesories"
      },
    "blocks": [

    ]
  }]
}
{% endschema %}
