{% if section.settings.heading != blank or section.settings.product_list != blank %}
<section class="shop-accessories">
  <div class="page-width">
    {% if section.settings.heading != blank %}
    <div class="section-title">
      <h2 class="title-font">{{ section.settings.heading }}</h2>
    </div>
    {% endif %}
    {% if section.settings.product_list != blank %}
    <div class="flexbox">
	{% for product in section.settings.product_list %}
      <div class="col">
        <div class="col-wrap">
          <div class="col-image">
            <a href="{{ product.url }}">
              <img src="{{ product.featured_image | img_url:'525x' }}" alt="">
            </a>
          </div>
          <div class="col-details">
            <h3 class="title-font">{{ product.title }}</h3>
            <div class="col-link">
              <a href="{{ product.url }}">Shop</a>
            </div>
          </div>
        </div>
      </div>
      {% endfor %}
      
