      </div> -->

    </div>
    {% endif %}
  </div>
</section>
{% endif %}

{% schema %}
  {
    "name": "Shop Accessories",
	"class": "index-section",
    "settings": [
		{
			"type":"text",
			"id":"heading",
			"label":"Heading"
		},
		{			
          "type": "product_list",
          "id": "product_list",
          "label": "Products",
          "limit":2
		}
	]
  }
{% endschema %}