<section class=" my-6 flex flex-col justify-between gap-6 p-4 md:my-12 md:flex-row">
  <div class="block max-w-sm flex-1  md:max-w-[52rem] ">
    <h3 class="block max-w-sm flex-1 text-2xl font-semibold md:max-w-[52rem] md:text-4xl">
      {{ section.settings.heading }}
    </h3>
    <div class="my-4 md:my-8 prose prose-a:underline">
      {{ section.settings.content }}
    </div>
  </div>
  <ul class="flex max-w-xs flex-wrap gap-2 md:w-[540px] text-base">
    {% for block in section.blocks %}
      <li class="rounded border border-gray-300 px-1 py-2 leading-none hover:border-gray-500">
        <a href="#{{ forloop.index }}">{{ block.settings.heading }}</a>
      </li>
    {% endfor %}
  </ul>
</section>
{% for block in section.blocks %}
  {% assign isLeft = forloop.index | modulo: 2 %}
  {% if isLeft %}
    <section class="relative z-10 my-12">
      <div class="md:px relative w-full items-center md:flex md:px-[var(--pageWidthPadding)] md:py-24">
        <div
          alt=""
          class="absolute bottom-0 left-0 -z-20 h-[70%] w-full bg-[#fce3df] md:left-auto md:right-0 md:h-full md:w-[70%]"
          width="1308"
        ></div>
        <img
          src="https://hunts.imgix.net/https%3A%2F%2Fwww.huntsoffice.co.uk%2Fmedia%2Fimagery%2FCulture%2Fculture-furniture-procurement-1.jpg%3Fv%3D1539247397?auto=compress%2Cformat&crop=focalpoint&fit=crop&fp-x=0.5&fp-y=0.5&h=1280&q=85&w=1920&s=37dc624984a3486a0325e59febcf4f8e"
          alt=""
          class="mx-auto w-[calc(100%-2rem)] md:w-1/2"
          width="1308"
        >
        <div class="flex-1">
          <div class="mx-auto max-w-lg p-4 pb-8 md:flex-1 md:px-[var(--pageWidthPadding)]">
            <h3 class="text-lg font-semibold  md:text-3xl">Furniture Provision & Procurement</h3>
            <p class="my-4 lg:my-8">
              Knock-knock: we visit every office furniture manufacturer on our books. How else can we be sure of
              quality, environmental impact and operational processes? We take the same care over delivery, using smart
              logistics to our warehouse and hubs, with in-house and regional logistics in the UK.
            </p>
            <a
              href=""
              class="flex w-full items-center justify-between gap-6 rounded border border-gray-600 p-2 px-4 transition-[padding] duration-500 ease-in-out hover:px-2"
            >
              <p class="">Contact our team</p>
              <span class="flex">
                <svg
                  width="11"
                  height="18"
                  xmlns="http://www.w3.org/2000/svg"
                  xmlns:xlink="http://www.w3.org/1999/xlink"
                >
                  <defs><path id="a" d="M5.562 17.985l8.674-8.673v-.637L5.562 0 5.184 0 4.5.683v.379l7.933 7.931L4.5 16.924l-.001.38.684.683.378-.002" fill="#000"></path></defs>
                  <g transform="translate(-4)" fill="none" fill-rule="evenodd" class="">
