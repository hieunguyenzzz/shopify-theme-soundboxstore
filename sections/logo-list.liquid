{%- if section.settings.divider -%}<div class="section--divider">{%- endif -%}
<section class="logo-list">
  <div class="page-width">
    {%- if section.settings.title != blank -%}
      <div class="section-header text-center">
        <h2 class="title-font">{{ section.settings.title | escape }}</h2>
      </div>
    {%- endif -%}

    {%- if section.blocks.size > 0 -%}
      <div class="logo-bar logo-bar--{{ section.id }}">
        <div class="new-grid product-grid" data-view="6-2">
          {%- for block in section.blocks -%}
            <div class="grid-item grid-product" {{ block.shopify_attributes }}>
              <div class="logo-bar__item{% if block.settings.image == blank %} logo-bar__item-svg{% endif %}">
                {%- if block.settings.link != blank -%}
                  <a
                    href="{{ block.settings.link }}"
                    class="logo-bar__link"
                    aria-label="{{ block.settings.image.alt }}"
                  >
                {%- endif -%}
                {%- if block.settings.image != blank -%}
                  {%- assign img_url = block.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
                  <img
                    loading="lazy"
                    class="logo-bar__image lazyload"
                    data-src="{{ img_url | img_url: '240x' }}"
                    data-widths="[360, 540, 720, 1020]"
                    data-aspectratio="{{ block.settings.image.aspect_ratio }}"
                    data-sizes="auto"
                    alt="{{ block.settings.image.alt | default:'logo' }}"
                  >
                {%- else -%}
                  {{ 'logo' | placeholder_svg_tag: 'placeholder-svg placeholder-svg--no-padding' }}
                {%- endif -%}
                {% comment %}
                  <div class="image-wrap">
                    {{
                      block.settings.image
                      | image_url: width: '180px', height: '61px'
                      | image_tag: loading: 'lazy', alt: block.settings.image.alt
                      | default: 'logo'
                    }}
                  </div>
                {% endcomment %}
                {%- if block.settings.link != blank -%}
                  </a>
                {%- endif -%}
              </div>
            </div>
          {%- endfor -%}
        </div>
      </div>
    {%- endif -%}
  </div>
</section>
{%- if section.settings.divider -%}</div>{%- endif -%}

{% schema %}
{
  "name": "Logo list",
  "class": "index-section",
  "max_blocks": 20,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Our brands"
    },
    {
      "type": "checkbox",
      "id": "divider",
      "label": "Show section divider",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "logo_image",
      "name": "Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "Add alt text for better SEO with 'Edit' button above"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link",
          "info": "Optional"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Logo list",
      "blocks": [
        {
          "type": "logo_image"
        },
        {
          "type": "logo_image"
        },
        {
          "type": "logo_image"
        },
        {
          "type": "logo_image"
        },
        {
          "type": "logo_image"
        },
        {
          "type": "logo_image"
        }
      ]
    }
  ]
}
{% endschema %}
