      color: var(--sound-box-color-1);
      background-image: url('data:image/svg+xml;utf8,<svg class="comparison-checked" stroke="red" fill="rgb(237 53 69)" stroke-width="0" viewBox="0 0 24 24" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg"><g><path fill="none" d="M0 0h24v24H0z"></path><path d="M12 22C6.477 22 2 17.523 2 12S6.477 2 12 2s10 4.477 10 10-4.477 10-10 10zm-.997-6l7.07-7.071-1.414-1.414-5.656 5.657-2.829-2.829-1.414 1.414L11.003 16z"></path></g></svg>');
      background-repeat: no-repeat;
  }
  .type-check{
    color: transparent;
    text-align: center;
  }
    .comparison-table tbody td{
      vertical-align:top
    }
</style>
<div class="page-width" data-handle="{{page.handle}}">
  {% for block in section.blocks %}
    {%- assign image = block.settings.image | default: block.settings.product.featured_image -%}
    {%- assign title = block.settings.heading | default: block.settings.product.title -%}
    {%- assign pre = forloop.index | minus: 1 -%}
    {%- assign next = forloop.index | plus: 1 -%}
    {%- assign checked = false -%}
    {% if page.handle == block.settings.content.handle %}
      {%- assign checked = true -%}
    {% endif %}
    <input
      class="comparison-input"
      id="input-{{forloop.index}}"
      type="radio"
      name="booth"
      hidden=""
      value="{{forloop.index}}"
      {% if checked %}
        checked
      {% endif %}
      {% if forloop.index == 1 %}
        checked
      {% endif %}
    >

    {% if forloop.index == 1 %}
      {%- assign pre = forloop.length -%}
    {% endif %}
    {% if forloop.length == forloop.index %}
      {%- assign next = 1 -%}
    {% endif %}
    <div
      data-handle="{{block.settings.content.handle}}"
      id="comparison-{{forloop.index}}"
      class="comparison-table-wrap"
    >
      <div class="comparison-table-heading">
        <img
          src="{{ image | image_url: width: 400 }}"
        >
        <div class="comparison-table-title">
          {{ title }}
        </div>
        <label for="input-{{ pre }}" class="comparison-left">
          <svg
            stroke="currentColor"
            fill="currentColor"
            stroke-width="0"
            viewBox="0 0 16 16"
            height="1em"
            width="1em"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              d="M8 0a8 8 0 1 0 0 16A8 8 0 0 0 8 0zm3.5 7.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5z"
            ></path>
          </svg></label
        ><label class="comparison-right" for="input-{{ next }}">
          <svg
            stroke="currentColor"
            fill="currentColor"
            stroke-width="0"
            viewBox="0 0 16 16"
            height="1em"
            width="1em"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              d="M8 0a8 8 0 1 0 0 16A8 8 0 0 0 8 0zm3.5 7.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5z"
            ></path>
          </svg>
        </label>
      </div>
      <div class="table-wrapper">
        {{ block.settings.content.content }}
      </div>
    </div>
  {% endfor %}
</div>

{% schema %}
{
  "name": "Custom content",
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full page width",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "space_around",
      "label": "Add spacing above and below",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "block",
      "name": "Comparision content",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        },
        {
          "type": "liquid",
          "id": "heading",
          "label": "Heading",
          "default": "Office Phone  <span style=\"display: inline-block;\">Pod - Solo</span>"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "page",
          "id": "content",
          "label": "Content"
        }

      ]
    }

  ],
  "presets": [
    {
      "name": "Comparision content",
      "blocks": [

      ]
    }
  ]
}
{% endschema %}
