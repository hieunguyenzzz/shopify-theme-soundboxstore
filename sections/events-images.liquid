<div class="page-width">
  {% for block in section.blocks %}
    {% assign image = block.settings.image %}
    {{ image | image_url: width: 400, height: 400, crop: 'center' | image_tag }}
  {% endfor %}
</div>
{% schema %}
{
  "name": "Events Images",
  "settings": [],
  "blocks":[
    {
      "type": "image",
      "name": "Image",
      "limit":3,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
    "name": "Events Images"
    }
  ]
}
{% endschema %}
