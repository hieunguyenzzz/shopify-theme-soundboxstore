{% assign id = section.id %}
{% assign img = section.settings.image %}
<style>
        .{{id}}-wrap{
          position: relative;
        display: grid;
        grid-template-columns: repeat(2, minmax(0, 1fr));
        height: calc(100vh - 100px);
        align-items: center;
        isolation: isolate;
        }
        .{{id}}-left,.{{id}}-right{
          flex:1
        }

        .{{id}}-left{
          width: 700px;
          margin: auto;
          max-width: 70%;
          box-shadow: 0px 2px 16px 2px #00000021;
        }
        .{{id}}-left img{
          object-fit: cover;
  display:block;
        }
        .{{id}}-right{
        width: 600px;
          margin: auto;
          max-width: 70%;
        }
        .{{id}}-right p{
          color:#aeaeae
        }
  .{{id}}-right .section-btn{
        display: flex;
    column-gap: 1em;
    flex-wrap: wrap;
  }
        .{{id}}-right .section-btn a{
       width: 100%;
    line-height: 2.4;min-width:240px;
    font-size: 0.7em;
    flex: 1;
    margin-top: 20px;
        }
        .{{id}}-right .h2,.{{id}}-right h2{
            font-size: calc(var(--typeHeaderSize)*1);
            margin-bottom: 40px;
        }
        .{{id}}-wrap::before{
        content:'';
        position: absolute;
        right: 50% ;
        top: 0;
        bottom: 0;
        width:100vw  ;
        background: #f5f5f5;
        z-index: -1;
        }
        @media screen and  (max-width: 900px) {
        .{{id}}-wrap{
        display: flex;
        text-align: center;
      }
      .{{id}}-left{
       position: absolute;
    left:0;
       width: 100%    ;
       height: 100%;
       max-width: unset;
      }
      .{{id}}-left *:nth-child(2){
        display: none!important;
      }
      .{{id}}-left img{
       position: absolute;
       left: 0;

       width: 100%    ;
       height: 100%;
       max-width: unset;
       z-index: -1;
      }
      .{{id}}-right {
       max-width: 90%;
          z-index: 1 !important;
          padding: 3em 2em !important;
          background:#ffffffe8 !important;
          backdrop-filter: blur(4px);

      }
      .{{id}}-wrap::before{
        display: none;
      }
      .{{id}}-right p{
        color: #696969;
      }
      }
</style>

<div class="{{ id }}-wrap page-width">
  <div class="{{ id }}-left">
    {{
      img
      | image_url: width: 800
      | image_tag: widths: '400, 600, 800', loading: 'lazy', alt: section.settings.content
    }}
  </div>
  <div class="{{ id }}-right">
    <div class="{{ id }}-content">
      {{ section.settings.content }}
      <div class="section-btn">
        <a href="{{ section.settings.button_link }}" class="btn">{{ section.settings.button_text }}</a>
        <a href="{{ section.settings.button_link_2 }}" class="btn">{{ section.settings.button_text_2 }}</a>
      </div>
    </div>
  </div>
</div>

{% schema %}
 {
   "name": "Quote success",
   "settings": [
	{
         "type": "image_picker",
         "id": "image",
         "label": "Image"
       },
	{
         "type": "image_picker",
         "id": "mobile_image",
         "label": "Mobile Image"
       },
	{
         "type": "richtext",
         "id": "content",
         "label": "Content"
       },
     {
         "type": "text",
         "id": "button_text",
         "label": "Showroom Button Text","default":"BOOK SHOWROOM VISIT"
       },
	{
         "type": "url",
         "id": "button_link",
         "label": "Showroom Button Link"
       },
          {
         "type": "text",
         "id": "button_text_2",
         "label": "Remote Tour Button Text","default":"REMOTE TOUR"
       },
     	{
         "type": "url",
         "id": "button_link_2",
         "label": "Remote Tour Button Link"
       }
],
   "presets": [
     {
       "name": "Quote success",
       "blocks": []
     }
   ]
 }
{% endschema %}
