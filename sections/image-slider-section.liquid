      "label": "Overlay",
      "default": true
    }, {
      "type": "range",
      "id": "overlay_range",
      "label": "Overlay range",
      "min": 0,
      "max": 100,
      "unit": "%",
      "step": 10,
      "default": 60
    }, {
      "type": "text",
      "id": "title",
      "label": "Title"
    }, {
      "type": "text",
      "id": "title_width",
      "label": "Title width"
    }, {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    }, {
      "type": "text",
      "id": "description_width",
      "label": "description width"
    }, {
      "type": "text",
      "id": "button_text",
      "label": "Button Text"
    }, {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }, {
      "type": "text",
      "id": "button_text_2",
      "label": "Get Specs Sheet Text"
    }, {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "default": "center-left",
      "options": [
        {
          "value": "top-left",
          "label": "Top Left"
        },
        {
          "value": "top-center",
          "label": "Top center"
        },
        {
          "value": "top-right",
          "label": "Top right"
        },
        {
          "value": "center-left",
          "label": "Center left"
        }, {
          "value": "center-center",
          "label": "Center center"
        }, {
          "value": "bottom-left",
          "label": "Bottom left"
        }, {
          "value": "bottom-center",
          "label": "Bottom center"
        }, {
          "value": "bottom-right",
          "label": "Bottom right"
        }
      ]
    }, {
      "type": "text",
      "id": "section_class",
      "label": "Section class"
    }
  ],
  "blocks": [
    {
      "type": "image_block",
      "name": "Image block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }, {
          "type": "image_picker",
          "id": "image_mobile",
          "label": "Image (mobile)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image Slider section",
      "blocks": []
    }
  ]
}
{% endschema %}
