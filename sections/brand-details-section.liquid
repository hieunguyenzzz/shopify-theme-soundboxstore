{% if section.settings.sliderenable %}
  <style>
      .brand-details-slider .slide{
        display: none;
      }
    .brand-details-slider  .slick-slide .image-group  img{
      display: none;
    }

      .brand-details-slider   .slick-slide.slick-current  .image-group img{
      display: block;


    }
      .brand-details-slider .slide:first-child{
        display: block;
      }
      .slick-initialized.brand-details-slider .slide{
        display: block;
      }
  </style>
{% endif %}
<style>
     .image-group img{
            border-radius: 0.4em;
    border-top-right-radius: min(4em,12vw);

    }
    .right-col .col-wrap .image-group:not(:has(.image-col:nth-child(2))) .image-col{
      max-width:100%;

  }
  .brand-details-section .image-group {
    gap:10px;
  }
  .right-col .col-wrap .image-group:not(:has(.image-col:nth-child(2))) .image-col .image-wrap:after{
      display:none
  }
  .right-col .col-wrap .image-group:not(:has(.image-col:nth-child(2))) .image-col .image-wrap img{
      position:relative;    max-height: min(70vh,80vw);
  }
</style>
<section class="brand-details-section">
  <div class="{% if section.settings.sectionwidth %}section-wrap{% else %}page-width{% endif %}">
    {% if section.settings.title != blank %}
      <div class="section-header text-center">
        <h2 class="title-font">{{ section.settings.title }}</h2>
      </div>
    {% endif %}

    <div class="brand-details-slider {% if section.blocks.size > 1 %}active{% endif %}">
      {%- for block in section.blocks -%}
        <div class="slide {{ block.settings.slide_class }} slide-{{- block.id -}}">
          <div class="slide-wrap page-width">
            {% if block.settings.title != blank %}
              <h2 class="title-font">{{ block.settings.title }}</h2>
            {% endif %}
            <div class="slide-top-section">
              <div class="flexbox">
                <div class="col left-col">
                  <div class="col-wrap">
                    {% if block.settings.logo_image != blank %}
                      {{ block.settings.logo_image | image_url: width: 200 | image_tag: loading: 'lazy' }}
                    {% endif %}
                  </div>
                </div>
                <div class="col right-col">
                  <div class="col-wrap">
                    <div
                      id="slider-{{ block.id }}"
                      class="image-group {% if block.settings.slide_image3 != blank %}not-two-col-show{% endif %}"
                    >
                      {% if block.settings.slide_image1 != blank %}
                        <div class="image-col">
                          <div class="image-wrap">
                            {{
                              block.settings.slide_image1
                              | image_url: width: 800, crop: 'center'
                              | image_tag:
                                widths: '150, 300,400, 800',
                                sizes: '(max-width: 425px) 320px,(max-width: 425px) 320px, 66.6vw',
                                loading: 'lazy'
                            }}
                          </div>
                        </div>
                      {% endif %}
                      {% if block.settings.slide_image2 != blank %}
                        <div class="image-col">
                          <div class="image-wrap">
                            {{
                              block.settings.slide_image2
                              | image_url: width: 400, crop: 'center'
                              | image_tag:
                                widths: '100, 160,200, 400',
                                sizes: '(min-width: 768px) 400px,(min-width: 425px) 150px, 30vw',
                                loading: 'lazy'
                            }}
                          </div>
                        </div>
                      {% endif %}
                      {% if block.settings.slide_image3 != blank %}
                        <div class="image-col">
                          <div class="image-wrap">
                            {{
                              block.settings.slide_image3
                              | image_url: width: 400, crop: 'center'
                              | image_tag:
                                widths: '100, 160,200, 400',
                                sizes: '(min-width: 768px) 400px,(min-width: 425px) 150px, 30vw',
                                loading: 'lazy'
                            }}
                          </div>
                        </div>
                      {% endif %}

                      {% if block.settings.slide_image4 != blank %}
                        <div class="image-col">
                          <div class="image-wrap">
                            {{
                              block.settings.slide_image4
                              | image_url: width: 400, crop: 'center'
                              | image_tag:
                                widths: '100, 160,200, 400',
                                sizes: '(min-width: 768px) 400px,(min-width: 425px) 150px, 30vw',
                                loading: 'lazy'
                            }}
                          </div>
                        </div>
                      {% endif %}
                      {% if block.settings.slide_image5 != blank %}
                        <div class="image-col">
                          <div class="image-wrap">
                            {{
                              block.settings.slide_image5
                              | image_url: width: 400, crop: 'center'
                              | image_tag:
                                widths: '100, 160,200, 400',
                                sizes: '(min-width: 768px) 400px,(min-width: 425px) 150px, 30vw',
                                loading: 'lazy'
                            }}
                          </div>
                        </div>
                      {% endif %}
                      {% if block.settings.slide_image6 != blank %}
                        <div class="image-col">
                          <div class="image-wrap">
                            {{
                              block.settings.slide_image6
                              | image_url: width: 400, crop: 'center'
                              | image_tag:
                                widths: '100, 160,200, 400',
                                sizes: '(min-width: 768px) 400px,(min-width: 425px) 150px, 30vw',
                                loading: 'lazy'
                            }}
                          </div>
                        </div>
                      {% endif %}
                    </div>
                    {% if block.settings.slider %}
                      <style>
                        #slider-{{ block.id }} .slick-arrow{
                          background:#0000003d !important
                        }
                        #slider-{{ block.id }}  .image-wrap {
                          margin:5px
                        }
                      </style>
                      <script>
                        $(document).ready(function(){
                          $('#slider-{{ block.id }}').slick({
                            infinite: true,
                            slidesToShow: 3,
                            slidesToScroll: 1
                          });
                        })
                      </script>
                    {% endif %}
                  </div>
                </div>
              </div>
            </div>
            <div class="slide-bottm-section">
              <div class="flexbox">
                <div class="col left-col">
                  <div class="col-wrap">
                    {% if block.settings.bottom_title != blank %}
                      <h4>{{ block.settings.bottom_title }}</h4>
                    {% endif %}
                    {% if block.settings.bottom_sub_title != blank %}
                      <h6>{{ block.settings.bottom_sub_title }}</h6>
                    {% endif %}
                  </div>
                </div>
                {% if block.settings.bottm_right_text != blank %}
                  <div class="col right-col">
                    <div class="col-wrap">
                      {{ block.settings.bottm_right_text }}
                    </div>
                  </div>
                {% endif %}
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
{%- for block in section.blocks -%}
  {% if block.settings.background_color != blank %}
    <style>
      .brand-details-section .slide-{{ block.id }} {background-color:{{ block.settings.background_color }};}
    </style>
  {% endif %}
{% endfor %}
{% if section.settings.sliderenable %}
  <script>
    $(document).ready(function(){
      $('.brand-details-section .brand-details-slider.active').slick({
        infinite: true,
        slidesToShow: 1,
        slidesToScroll: 1,
        adaptiveHeight: true,
        dots: {% if section.settings.slide_dots %}true{% else %}false{% endif %},
        arrows: {% if section.settings.slide_arrow %}true{% else %}false{% endif %},
        fade: true,
        cssEase: 'linear',
        responsive: [
          {
            breakpoint: 860,
            settings: {
              arrows:false,
            }
          }
        ]
      });
    })
  </script>
{% endif %}

