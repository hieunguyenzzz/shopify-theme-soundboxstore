{% comment %}
  {%- liquid
    assign blog = blogs[section.settings.blog]
    assign sidebar_count = 4

    if section.settings.blog_show_tags
      assign sidebar_count = 3
    endif

    assign have_blog = true
    if blog.empty? or blog.articles.size == 0
      assign have_blog = false
    endif
  -%}

  {%- if section.settings.divider -%}<div class="section--divider">{%- endif -%}

  <div class="page-width">
    {%- if section.settings.title != blank -%}
      <header class="section-header section-header--with-link">
        <h2 class="section-header__title">
          {{ section.settings.title | escape }}
        </h2>
        <a href="{{ blog.url }}" class="section-header__link">{{ 'blogs.article.view_all' | t }}</a>
      </header>
    {%- endif -%}

    <div class="blog-layout">
      <div class="blog-layout__main">
        <div class="new-grid">
          {%- if have_blog -%}
            {%- for article in blog.articles limit: 1 -%}
              {%- render 'article-grid-item',
                blog: blog,
                article: article,
                style: 'large',
                show_tags: section.settings.blog_show_tags,
                show_date: section.settings.blog_show_date,
                show_comments: section.settings.blog_show_comments,
                show_author: section.settings.blog_show_author,
                image_size: section.settings.blog_image_size
              -%}
            {%- endfor -%}
          {%- else -%}
            {%- render 'article-grid-item',
              blog: false,
              article: false,
              style: 'large',
              show_tags: section.settings.blog_show_tags,
              show_date: section.settings.blog_show_date,
              show_comments: section.settings.blog_show_comments,
              show_author: section.settings.blog_show_author,
              image_size: 'landscape'
            -%}
          {%- endif -%}
        </div>
      </div>
      <div class="blog-layout__sidebar">
        <div class="h4">{{ 'blogs.article.latest_posts' | t }}</div>

        {%- if have_blog -%}
          {%- for article in blog.articles limit: sidebar_count offset: 1 -%}
            {%- render 'article-grid-item',
              blog: blog,
              article: article,
              style: 'compact',
              show_tags: section.settings.blog_show_tags,
              show_date: section.settings.blog_show_date,
              show_comments: section.settings.blog_show_comments,
              show_author: section.settings.blog_show_author,
              image_size: section.settings.blog_image_size
            -%}
          {%- endfor -%}
        {%- else -%}
          {%- for i in (1..sidebar_count) -%}
            {%- render 'article-grid-item',
              blog: false,
              article: false,
              style: 'compact',
              show_tags: section.settings.blog_show_tags,
              show_date: section.settings.blog_show_date,
              show_comments: section.settings.blog_show_comments,
              show_author: section.settings.blog_show_author,
              image_size: 'landscape'
            -%}
          {%- endfor -%}
        {%- endif -%}

        {%- if section.settings.blog_show_tags and blog.all_tags.size > 0 -%}
          <hr class="hr--small hr--clear">
          <div class="h4">{{ 'blogs.article.explore_more' | t }}</div>

          <ul class="no-bullets tag-list">
            {%- for tag in blog.all_tags -%}
              {% if tag contains '_' %}
                {%- assign tag_starts_with = tag | slice: 0 -%}
                {% if tag_starts_with == '_' -%}
                  {%- if tag_count %}{%- assign tag_count = tag_count | minus: 1 | at_least: 0 -%}{% endif -%}
                  {%- continue -%}
                {%- endif -%}
              {%- endif %}
              <li class="tag tag--inline">
                <a href="{{ blog.url }}/tagged/{{ tag.handle }}" class="article-tag">{{ tag }}</a>
              </li>
            {%- endfor -%}
          </ul>
        {%- endif -%}
      </div>
    </div>
  </div>

  {%- if section.settings.divider -%}</div>{%- endif -%}
{% endcomment %}

{%- liquid
  assign blog = blogs[section.settings.blog]
  assign sidebar_count = 4

  if section.settings.blog_show_tags
    assign sidebar_count = 3
  endif

  assign have_blog = true
  if blog.empty? or blog.articles.size == 0
    assign have_blog = false
  endif
-%}
<style>
      .{{ section.id }}-section{
           padding-top:40px;
      }
            .{{ section.id }}-slider.product-list-group .slick-list{
        padding:0;
              padding-left:15px;
            width:calc(100% + 15px);
              flex-shrink:0;

            }
            .{{ section.id }}-slider.product-list-group {
              display:flex;    padding:0 var(--pageWidthPadding);overflow:hidden


            }
            .{{ section.id }}-slider.product-list-group .slick-arrow{
              background: #ffffffab;
              border-radius: 100%;
              width: 40px;
              height: 40px;
      box-shadow: 0px 0px 10px 2px #0000001a;
            }
            .{{ section.id }}-slider.product-list-group .slick-arrow.slick-prev{
                 left: 15px;
              top: calc(50% - 40px);
              background-image: url(https://cdn.shopify.com/s/files/1/0631/9892/0929/files/arrow-left.png?v=1688531622);
              background-repeat: no-repeat;
              background-position: left 6px center;
              background-size: 26px;
            }
            .{{ section.id }}-slider.product-list-group .slick-arrow.slick-next{
            right: 15px;
              top: calc(50% - 40px);
              background-image: url(https://cdn.shopify.com/s/files/1/0631/9892/0929/files/arrow-right.png?v=1688531621);
              background-repeat: no-repeat;
                background-position: right 6px center;
              background-size: 26px;
          }
            }
            .{{ section.id }}-slider.product-list-group .col-image img{
              height:382px;

            }
            .{{ section.id }}-slider.product-list-group .col{
              flex-shrink: 0;
              max-width:unset;
            }
             .{{ section.id }}-slider.product-list-group .col .col-image a:after{
              padding-bottom:70%
            }

      @media only screen and (max-width: 678px) {
        .{{ section.id }}-slider.product-list-group {


            }
    }
  .{{ section.id }}-section h4  a{
         font-weight: 700;
    font-size: 24px;
    line-height: 1.667;
    letter-spacing: 1px;
    color: #303a44;
    margin-bottom: 6px;
      }
   @media only screen and (max-width: 1024px) {
      .{{ section.id }}-section h4  a{
          font-size: 16px;
          line-height: 1.125;
          margin-bottom: 10px;
      }
  }
</style>
<section class="{{ section.id }}-section collections-product-list">
  {% if section.settings.title != blank or section.settings.description != blank %}
    <div class="page-width">
      <div class="section-header">
        {% if section.settings.title != blank %}
          <div class="left-col">
            <h2 class="title-font">{{ section.settings.title }}</h2>
          </div>
        {% endif %}

        {% if section.settings.description != blank %}
          <div class="right-col">
            {{ section.settings.description }}
          </div>
        {% endif %}
      </div>
    </div>
  {% endif %}
  {% if blog.articles.size > 0 %}
    <div class="{{ section.id }}-slider  product-list-group slider_active">
      {% for article in blog.articles %}
        <div class="col">
          <div class="col-wrap">
            <div class="col-image">
              <a href="{{  article.url }}">
                {{
                  article.image
                  | image_url: width: 700
                  | image_tag: widths: '300, 600, 800', loading: 'lazy', alt: product.title
                }}
              </a>
            </div>
            <div class="product-details" style="padding-top:0.8em">
              <h4>
                <a href="{{ article.url}}">
                  {{- article.title -}}
                </a>
              </h4>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
    <script>
        document.addEventListener(
        "app:ready",
        (e) => {
              $(document).ready(function() {
                $('.{{ section.id }}-slider').slick({
                infinite: false,
                slidesToShow: 4,
                arrows: true,
                dots: true,
                slidesToScroll: 1,
                responsive: [
                  {
                    breakpoint: 860,
                    settings: {
                      slidesToShow: 2.3
                    }
                  }, {
                    breakpoint: 768,
                    settings: {
                      slidesToShow: 2.3,
                      arrows: false,
                      dots: false
                    }
                  }, {
                    breakpoint: 540,
                    settings: {
                      slidesToShow: 1.3,
                      arrows: false,
                      dots: false
                    }
                  }
                ]
              });
            });
           },
        false,
      );
    </script>
  {% endif %}
</section>

{% schema %}
{
  "name": "Blog posts",
  "class": "index-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "From the blog"
    },
    {
      "id": "blog",
      "type": "blog",
      "label": "Blog"
    },
    {
      "type": "checkbox",
      "id": "blog_show_tags",
      "label": "Show tags",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "blog_show_date",
      "label": "Show date",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "blog_show_comments",
      "label": "Show comment count",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "blog_show_author",
      "label": "Show author",
      "default": false
    },
    {
      "type": "select",
      "id": "blog_image_size",
      "label": "Force image size",
      "default": "wide",
      "options": [
        {
          "value": "natural",
          "label": "Natural"
        },
        {
          "value": "square",
          "label": "Square (1:1)"
        },
        {
          "value": "landscape",
          "label": "Landscape (4:3)"
        },
        {
          "value": "portrait",
          "label": "Portrait (2:3)"
        },
        {
          "value": "wide",
          "label": "Wide (16:9)"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "divider",
      "label": "Show section divider",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Blog posts",
      "settings": {
        "blog": "News"
      }
    }
  ]
}
{% endschema %}
