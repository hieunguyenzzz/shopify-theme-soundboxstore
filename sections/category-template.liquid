    },
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Title"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "TOPIC"
    }, {
      "type": "textarea",
      "id": "content",
      "label": "Content",
      "default": "<p>If the open office dies, as its critics predict, what will be the new norm? We take a look at how the workplace is evolving and what's next.</p>"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
         {
          "type": "product",
          "id": "product",
          "label": "Product"
        },
         {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
         {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }

      ]
    }
  ],
  "presets": [
    {
      "name": "Category feature",
      "settings": {},
      "blocks": []
    }
  ]
}
{% endschema %}
