    height: 50vw;
    max-height: 900px;
    position: relative;
    overflow: unset;

  }

  .grid-article__image {
    margin: 0;
  }

  .blog-wrap .grid-article-first .image-wrap img {
    position: absolute;
    top: 0;
    left:
      30%;
