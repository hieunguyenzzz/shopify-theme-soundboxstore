    height: calc(100vh - 100px);

    position: relative;
    overflow: unset;
  }

  .blog-group>div:first-child .image-wrap img {
    position: absolute;
    right: 0;
    top: 0;
    width: 100vw;
    max-width: unset;
    height: 100%;
    object-fit: cover;
  }

