<style>
      .{{section.id}}-row {
        display: flex;
        gap: max(4vw ,6rem);
        flex-wrap: wrap;
    }

    .{{section.id}}-col-md-5 {
        flex: 1;
        min-width: 300px;
    }

    .{{section.id}}-col-md-5 ul {
        list-style: none;
        margin: 0;
    }

    .{{section.id}}-col-md-5 img {
        vertical-align: middle;
    }

    .{{section.id}}-page-width.page-width {
        font-size: 16px;
      padding-bottom:60px;
    }

    .page-width.page-width--narrow.page-content {
    }


    h1.section-header__title {
        text-align: center;
        padding: var(--sectionHeaderBottom);
    }


    .{{section.id}}-col-md-5 h3 {
        /* font-size: 1rem; */
        /* margin: 0; */
      color:#ff1a34;
        font-weight: bold;
    }
    .{{section.id}}-col-md-5 ul li div:first-child{
  font-weight: bold;
      margin-bottom:1.5em;
    }
   .{{section.id}}-col-md-5 ul li {
  margin-bottom:3em
    }
    .{{section.id}}-col-md-5 h3 + div {
        font-size: 0.9em;
        font-weight: 600;
    }
</style>
<div class="page-width page-width--narrow page-content">
  <header
    class="section-header"
    style="    text-align: center;"
  >
    <h1 class="section-header__title">
      {{ section.settings.heading }}
    </h1>
    {% if section.settings.link.url != blank %}
      <a
        class="btn"
        href="{{ section.settings.link.url }}"
        id="click-me"
      >
        {{- section.settings.url_text -}}
      </a>
    {% endif %}
  </header>
</div>
<div class="{{section.id}}-page-width page-width">
  <div class="{{section.id}}-row">
    {% assign block = section.blocks[0] %}
    {% assign index = '0' %}
    <div class="{{section.id}}-col-md-5" {{ block.shopify_attributes }}>
      {% if block.type == 'block' %}
        <h3>{{ block.settings.title }}</h3>
        <div>
          {{ block.settings.content }}
        </div>
        <h3 style="text-align: left;"><span style="color:#ff1a34; font-size: 1.75em;">—</span></h3>
      {% endif %}
      <ul>
        {% for block in section.blocks %}
          {% if block.type == 'child' %}
            {% if block.settings.index == index %}
              <li {{ block.shopify_attributes }}>
                <div>
                  <img
                    loading="eager"
                    width="50"
                    height="50"
                    src="{{ block.settings.image | img_url: '50px'}}"
                    alt="{{ block.settings.image.alt | default : block.settings.title }}"
                  >
                  {{ block.settings.title }}
                </div>
                <div>{{ block.settings.content }}</div>
              </li>
            {% endif %}
          {% endif %}
        {% endfor %}
      </ul>
      <div style="text-align: center;" class="{{section.id}}-need-help">
        {% for block in section.blocks %}
          {% if block.settings.index == index %}
            {% if block.type == 'btn' %}
              <a
                class="btn"
                href="{{ block.settings.link.url }}"
                id="click-me"
              >
                {{- block.settings.title -}}
              </a>
            {% endif %}
          {% endif %}
        {% endfor %}
      </div>
    </div>
    {% assign block = section.blocks[1] %}
    {% assign index = '1' %}

    <div class="{{section.id}}-col-md-5 pull-right" {{ block.shopify_attributes }}>
      {% if block.type == 'block' %}
        <h3>{{ block.settings.title | default: 'Become a Reseller' }}</h3>
        <div>
          {{
            block.settings.content
            | default: 'Whether you\"re an individual agent or e-commerce store looking to expand your offering, the Soundbox Store own-brand range is available for resellers. Apply below to find out more about opportunities to partner with Soundbox Store!'
          }}
        </div>
        <h3 style="text-align: left;"><span style="color:#ff1a34; font-size: 1.75em;">—</span></h3>
      {% endif %}
      <ul>
        {% for block in section.blocks %}
          {% if block.type == 'child' %}
            {% if block.settings.index == index %}
              <li {{ block.shopify_attributes }}>
                <div>
                  <img
                    loading="eager"
                    width="50"
                    height="50"
                    src="{{ block.settings.image | img_url: '50px'}}"
                    alt="{{ block.settings.image.alt | default : block.settings.title }}"
                  >
                  {{ block.settings.title }}
                </div>
                <div>{{ block.settings.content }}</div>
              </li>
            {% endif %}
          {% endif %}
        {% endfor %}
      </ul>
      <div style="text-align: center;" class="{{section.id}}-need-help">
        {% for block in section.blocks %}
          {% if block.settings.index == index %}
            {% if block.type == 'btn' %}
              <a
                class="btn"
                href="{{ block.settings.link.url }}"
                id="click-me"
              >
                {{- block.settings.title -}}
              </a>
            {% endif %}
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>
<div class="page-width page-width--narrow page-content">
  <div
    class="section-header"
    style="    text-align: center;"
  >
    {% if section.settings.link.url != blank %}
      <a
        class="btn"
        href="{{ section.settings.link.url }}"
        id="click-me"
      >
        {{- section.settings.url_text -}}
      </a>
    {% endif %}
  </div>
</div>
