{% schema %}
{
  "name": "Zoho form popup",
  "class": "zoho-form-popup",
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "settings": [
        {
          "type": "text",
          "id": "countryCode",
          "label": "Coundtry Code",
          "default": "GB"
        },
        {
          "type": "text",
          "id": "langCode",
          "label": "Languages code"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "UK"
        },
        {
          "type": "liquid",
          "id": "content",
          "label": "content"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Zoho form popup",
      "blocks": [],
      "settings": {}
    }
  ]
}
{% endschema %}
