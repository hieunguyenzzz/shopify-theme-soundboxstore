<style></style>
{% for block in section.blocks %}
  {%- if localization.country.iso_code == block.settings.countryCode -%}
    {%- if block.settings.langCode -%}
      {% if block.settings.langCode == localization.language.iso_code %}
        {{ block.settings.content }}
      {% endif %}
    {% else %}
      {{ block.settings.content }}
    {%- endif -%}
  {%- endif -%}
{% endfor %}
{% schema %}
{
  "name": "Zoho form popup",
  "class": "zoho-form-popup",
  "settings": [

  ],
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "settings": [
         {
          "type": "text",
          "id": "countryCode",
          "label": "Coundtry Code",
          "default": "GB"
        },
{
          "type": "text",
          "id": "langCode",
          "label": "Languages code"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "UK"
        },
        {
          "type": "liquid",
          "id": "content",
          "label": "content"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Zoho form popup",
      "blocks": [

      ],
      "settings": {

      }
    }
  ]
}
{% endschema %}
