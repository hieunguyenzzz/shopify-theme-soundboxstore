
{% for block in section.blocks %}
  {% if forloop.index == 1 %}
    {% assign content = block.settings.content %}
  {% endif %}
  {%- if localization.country.iso_code == block.settings.countryCode -%}
    {%- if block.settings.langCode != blank -%}
      {% if block.settings.langCode == localization.language.iso_code %}
        {% assign content = block.settings.content %}
      {% endif %}
    {% else %}
      {% assign content = block.settings.content %}
    {%- endif -%}
  {%- endif -%}
{% endfor %}
{{ content }}
