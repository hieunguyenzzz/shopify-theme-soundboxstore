<ul class="showroom-bar">
  {% for block in section.blocks %}
    <li>
      <a href="{{ block.settings.url }}">{{ block.settings.heading }}</a>
      <div>{{ block.settings.subheading }}</div>
    </li>
  {% endfor %}
</ul>
{% schema %}
 {
   "name": "Showroom bar",
"blocks": [
     {
       "type": "showroom",
       "name": "showroom",
       "settings": [
            {
           "type": "text",
           "id": "heading",
           "label": "Heading"
         },
           {
           "type": "text",
           "id": "subheading",
           "label": "Sub Heading"
         },
         {
           "type": "url",
           "id": "link",
           "label": "Url"
         }

       ]
     }
   ]
 }
{% endschema %}
