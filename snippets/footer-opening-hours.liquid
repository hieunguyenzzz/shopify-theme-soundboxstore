{% if block.type == 'footer_hours' %}
  <div class="footer-opening-hours">
    <div class="footer-opening-hours">
      {% if block.settings['opening-hour-heading'] -%}
        <div class="footer__title">
          {{ block.settings['opening-hour-heading'] }}
        </div>
      {%- endif %}
      {% if block.settings.text1 != blank
        or block.settings.text2 != blank
        or block.settings.text3 != blank
        or block.settings.text4 != blank
        or block.settings.text5 != blank
      %}
        <div class="footer-opening-dec">
          {% if block.settings.text1 != blank -%}
            <p>{{ block.settings.text1 }}</p>
          {%- endif %}
          {% if block.settings.text2 != blank -%}
            <p>{{ block.settings.text2 }}</p>
          {%- endif %}
          {% if block.settings.text3 != blank -%}
            <p>{{ block.settings.text3 }}</p>
          {%- endif %}
          {% if block.settings.text4 != blank -%}
            <p>{{ block.settings.text4 }}</p>
          {%- endif %}
          {% if block.settings.text5 != blank -%}
            <p>
              <strong>{{ block.settings.text5 }}</strong>
            </p>
          {%- endif %}
          {% if block.settings.richtext != blank -%}
            <div style="font-size:13px">{{ block.settings.richtext }}</div>
          {%- endif %}
          <div style="display:none">
            <img
              loading="lazy"
              src="//soundboxstore.com/cdn/shop/files/pngwing.com_b3e58321-5c12-4b6c-8ff5-b82118cb0c41.png?v=1717688880&amp;width=50"
              width="50"
              height="50"
              alt=""
            >
            <p>TUV.SUD Certification</p>
            <img
              loading="lazy"
              src="//soundboxstore.com/cdn/shop/files/pngwing.com_1.png?v=1717686879&amp;width=50"
              width="50"
              height="50"
              alt=""
            >
            <p>FSC Certification</p>
            <img
              loading="lazy"
              src="//soundboxstore.com/cdn/shop/files/ul_ae1adaf0-d96b-450e-b7b6-036b671627fb.png?v=1717689671&amp;width=50"
              width="50"
              height="50"
              alt=""
            >
            <p>UL Certification</p>
            <img
              loading="lazy"
              src="//soundboxstore.com/cdn/shop/files/ce.png?v=1717688682&amp;width=50"
              width="50"
              height="50"
              alt=""
            >
            <p>CE Certification</p>
          </div>
        </div>
      {% endif %}
    </div>
  </div>
{% endif %}
