{% if block.type == 'footer_hours' %}
  <div class="footer-opening-hours">
    <div class="footer-opening-hours">
      {% if block.settings.opening-hour-heading -%}
        <div class="footer__title">
          {{ block.settings.opening-hour-heading }}
        </div>
      {%- endif %}
      {% if block.settings.text1 != blank or block.settings.text2 != blank or block.settings.text3 != blank or block.settings.text4 != blank or block.settings.text5 != blank %}
        <div class="footer-opening-dec">
          {% if block.settings.text1 != blank -%}
            <p>{{ block.settings.text1 }}</p>
          {%- endif %}
          {% if block.settings.text2 != blank -%}
            <p>{{ block.settings.text2 }}</p>
          {%- endif %}
          {% if block.settings.text3 != blank -%}
            <p>{{ block.settings.text3 }}</p>
          {%- endif %}
          {% if block.settings.text4 != blank -%}
            <p>{{ block.settings.text4 }}</p>
          {%- endif %}
          {% if block.settings.text5 != blank -%}
            <p>
              <strong>{{ block.settings.text5 }}</strong>
            </p>
          {%- endif %}
          {% if block.settings.richtext != blank -%}
            <div>{{ block.settings.richtext }}</div>
          {%- endif %}
        </div>
      {% endif %}
    </div>
  </div>
{% endif %}
