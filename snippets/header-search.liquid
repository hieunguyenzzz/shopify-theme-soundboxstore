<style>
  .site-header__search-container.is-active {
    background: transparent;
  }
  .site-header__search-container.is-active > div {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    padding: 108px 24px 0 24px;
    font-size: 16px;
    background: #000000d9;
    color: white;
  }
  .site-header__search-container .search-page-width {
    max-width: 684px;
    margin: auto;
    position: relative;
  }
  .site-header__search-container .site-header__search-results {
    max-height: calc(100vh - 100% - 180px);
  }
  .site-header__search-container .site-header__search {
    display: flex;
    flex-direction: column;
  }
  .site-header__search-form.is-active .site-header__search-btn--cancel {
    position: fixed;
    top: 24px;
    right: 24px;
    width: 50px;
    height: 50px;
  }
  .site-header__search-form.is-active .site-header__search-btn--cancel svg {
    color: white;
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    fill: #fff;
    display: block;
    left: 0;
  }
  .site-header__search-container h3 {
    margin-bottom: 32px;
    font-size: 38px;
    line-height: 1.2;
    text-align: center;
    color: #fff;
  }
  .site-header__search-form.is-active {
    width: 100%;
  }
  .site-header__search-container .site-header__search-input{
    line-height: 38px;
  }
   .site-header__search-container .grid-item__content{
    background:url(https://soundboxstore.com/cdn/shop/files/sbs-stn6-1-2-bg.jpg?v=1688973031&width=400)
  }
</style>
{%- liquid
  assign dark_search_bg = true
  assign lightness = settings.color_header_search | color_brightness

  if lightness > 100
    assign dark_search_bg = false
  endif
-%}
<h3>What are you looking for?</h3>
<form
  action="{{ routes.search_url }}"
  method="get"
  role="search"
  class="site-header__search-form"
  data-dark="{{ dark_search_bg }}"
>
  <input type="hidden" name="type" value="{{ settings.search_type }}">
  <input
    type="search"
    name="q"
    value="{{ search.terms | escape | replace: '*', '' }}"
    placeholder="{{ 'general.search.placeholder' | t }}"
    id="site-header__search-input"
    class="site-header__search-input"
    aria-label="{{ 'general.search.placeholder' | t }}"
  >
  <button type="submit" class="text-link site-header__search-btn site-header__search-btn--submit">
    <svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-search" viewBox="0 0 64 64">
      <defs><style>.cls-1{fill:none;stroke:#000;stroke-miterlimit:10;stroke-width:2px}</style></defs><path class="cls-1" d="M47.16 28.58A18.58 18.58 0 1 1 28.58 10a18.58 18.58 0 0 1 18.58 18.58zM54 54L41.94 42"/>
    </svg>
    <span class="icon__fallback-text">{{ 'general.search.submit' | t }}</span>
  </button>

  <button type="button" class="text-link site-header__search-btn site-header__search-btn--cancel">
    <svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-close" viewBox="0 0 64 64">
      <defs><style>.cls-1{fill:none;stroke:#000;stroke-miterlimit:10;stroke-width:2px}</style></defs><path class="cls-1" d="M19 17.61l27.12 27.13m0-27.13L19 44.74"/>
    </svg>
    <span class="icon__fallback-text">{{ 'general.accessibility.close' | t }}</span>
  </button>
</form>
