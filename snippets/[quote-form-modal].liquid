<style>
            .quote-form-modal{
              display: none;
                position: fixed;
                right: 0;
                top: 0;
                width: 100%;
                height: 100%;
                background: #000000a3;
                z-index: 10;
            }
            .quote-form-modal-toggle:checked + .quote-form-modal{
              display:block
            }
            .quote-form-modal-inner {
              position: absolute;
              right: 0;
              height: 100%;
              top: 0;
              width: 1232px;
              max-width:100%;
              overflow:auto;
              background: #e9e9e9;
          }
          .quote-form-modal-inner {
            padding: max(1em,2vw) max(1em,2vw) max(1em,6vw) max(1em,6vw);
        }

        .quote-form-modal-header {
            display: flex;
            justify-content: flex-end;
        }

        .quote-form-modal-content-left {
            width: 600px;
            max-width: 100%;
            min-height: 400px;
        }
        .quote-form-modal-content-right-inner {
          display: flex;
          flex-direction: column;
          gap: 1.5em;
          font-size: 16px;
      }

      .quote-form-card {
        padding: 1em;
        border: 2px solid;
        position: relative;
        background: white;
        height: 7.4em;
        text-align: left;
      }
      .quote-form-card:hover{
        background:#f1f1f1
      }
      .quote-form-card-label {
      position: absolute;
      right: -0.5em;
      top: 0;
      font-size: 0.7em;
      color: white;
      padding: 0.2em 1em;
      border-radius: 99em;
      line-height: 1.5em;
      background: #fb4646;
      margin-top: -1em;
      }

      .quote-form-card-content-inner {
          display: flex;
          gap: 1.4em;
      }

      .quote-form-card-subtitle {
          font-size: 1em;
          margin-block-start: 0.5em;
      }

      .quote-form-card-title {
        font-size: 1.1em; font-weight:500
      }
      .quote-form-card-content-icon {
        width: 1.5em;
        height: 1.5em;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .quote-form-card-content-icon svg {
       font-size:1.4em
    }
    .quote-form-modal-content-right-inner{
  display: grid;
      /* flex-direction: column; */
      gap: 1.5em;
      font-size: 16px;
      flex-wrap: wrap;
      position: absolute;
      right: 0;
      width: 500px;
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
</style>
<input hidden type="checkbox" name="quote-form-modal" id="quote-form-modal" class="hidden quote-form-modal-toggle">
<div class="quote-form-modal">
  <div class="quote-form-modal-inner">
    <div class="quote-form-modal-header">
      <label
        for="quote-form-modal"
        class=" btn btn--secondary text-label"
        style="white-space: nowrap;display: flex;gap: 1em;align-items: center;padding: 11px 1em;padding-right: 1em; border-width:2px"
      >
        <svg
          stroke="currentColor"
          fill="currentColor"
          stroke-width="0"
          viewBox="0 0 24 24"
          height="1em"
          width="1em"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path fill="none" stroke="#000" stroke-width="2" d="M3,3 L21,21 M3,21 L21,3"></path>
        </svg>
        <div>Close</div>
      </label>
    </div>
    <h3
      style="
               font-size: min(2.5em, 8vw);
        padding: 0.5em 0;
        border-bottom: 2px solid;
        margin-bottom: 1em;
      "
    >
      Request a quote
    </h3>
    <div
      class="quote-form-modal-content"
      style="
        display: flex;
        flex-wrap: wrap;
        gap: 2em;
      "
    >
      <div
        class="quote-form-modal-content-left"
        style="
          width: 100%;
          max-width: 840px;
          min-height: 400px;
        "
      >
        {% render '[request-quote-form]' %}
      </div>
      <div
        class="quote-form-modal-content-right"
        style="
          min-height: 400px;
          flex: 1;
          position: relative;
          margin: 0 auto;
        "
      >
        <div class="quote-form-modal-content-right-inner">
